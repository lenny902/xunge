/* flex */
/* flex x-0.5 y-0.5*/
.flex_center_center {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* flex x-0 y-0.5 */
.flex_left_center {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
/* flex x-0 y-0 */
.flex_left_top {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}
/* flex x-0 y-1 */
.flex_left_bottom {
  display: flex;
  justify-content: flex-start;
  align-items: flex-end
}
/* flex x-0.5 y-0 */
.flex_center_top {
  display: flex;
  justify-content: center;
  align-items: flex-start
}
/* flex x-0.5 y-1 */
.flex_center_bottom {
  display: flex;
  justify-content: center;
  align-items: flex-end
}

/* flex x-0.5 左右图 */
.flex_center_between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* flex x-1 y-0.5 */
.flex_right_center {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
/* flex x-1 y-0 */
.flex_right_top {
  display: flex;
  justify-content: flex-end;
  align-items: flex-start;
}
/* flex x-1 y-1 */
.flex_right_bottom {
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
}

/* flex_row_wrap */
.flex_row_wrap {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
/* 竖向布局 */
.flex_column {
  display: flex;
  flex-direction: column;
}

/* 竖向布局左边对其 */
.flex_column_left{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

/* 竖向布局中边对其 */
.flex_column_center {
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* 竖向布局右边对其 */
.flex_column_right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

/* 文字一行省略 */
.textEll_One {
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

/* 文字一行省略 作用于文字 */
.oneText {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}


/* 文字多行省略 */
.textEll_tow {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

